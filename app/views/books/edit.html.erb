<% if flash[:notice] %>
<p class = "success"><%= flash[:notice] %></p>
<% end %>


<h1>Editing Book</h1>

<% if @book.errors.any? %>
   <h3><%= @book.errors.count %>error prohibited this book from being saved:</h3>
   <% @book.errors.full_messages.each do |message| %>
    <%= message %>
   <% end %>
<% end %>


<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
